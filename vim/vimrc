" ruff configuration
" Disable signs globally (and optionally other on-type visuals for a cleaner edit)
let g:lsp_diagnostics_signs_enabled = 0
let g:lsp_diagnostics_highlights_enabled = 0  " Optional: No underlines/highlights on-type
